<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/collect_info_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_next_button"
        android:background="@android:color/black"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="NEXT"
            android:textColor="@android:color/white"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/collect_info_next">

        <com.ef.cat.ui.widget.FixedViewPager
            android:id="@+id/collect_info_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.ran.delta.widget.CircleIndicator
            android:id="@+id/collect_info_indicator"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/spacing_small"/>

    </FrameLayout>

</RelativeLayout>

