<RelativeLayout
    android:id="@+id/number_wrapper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/number_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:text="可以留下你的手机号吗?"/>

    <com.ef.newlead.ui.widget.DeletableEditText
        android:id="@+id/number_input"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/number_title"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:textColorHint="@color/tranBlack"
        android:textColor="@color/white"
        android:inputType="number"
        android:cursorVisible="false"
        android:hint="输入手机号"/>

    <View
        android:id="@+id/number_divide"
        android:layout_below="@+id/number_input"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/number_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_divide"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="A code will be sent to you in order to verify your phone number."/>

        <RelativeLayout
            android:id="@+id/number_bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="30dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.2"
            android:background="@drawable/bg_rounded_corners">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:text="获取验证码"
                android:textSize="14sp"/>

            <com.ef.newlead.ui.widget.IndicatedProgressView
                android:id="@+id/phone_progress_view"
                android:layout_width="30dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

</RelativeLayout>
