<LinearLayout
    android:id="@+id/number_wrapper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_red_light">

    <TextView
        android:id="@+id/number_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:text="可以留下你的手机号吗?"/>

    <com.ef.newlead.ui.widget.DeletableEditText
        android:id="@+id/number_input"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        app:backgroundTint="@color/white"
        android:textColorHint="@color/tranBlack"
        android:textColor="@color/white"
        android:inputType="number"
        android:cursorVisible="false"
        android:hint="输入手机号"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/number_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="67dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:text="A code will be sent to you in order to verify your phone number."/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="获取验证码"
            android:visibility="gone"
            android:textSize="18sp"/>

        <com.ef.newlead.ui.widget.IndicatedProgressView
            android:id="@+id/phone_progress_view"
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>




</LinearLayout>
