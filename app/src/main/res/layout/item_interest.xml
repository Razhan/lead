<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/interest_wrapper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CardViewMargin"
    app:cardCornerRadius="@dimen/spacing_tiny"
    app:cardElevation="@dimen/elevation_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:orientation="horizontal">

        <com.ef.cat.ui.widget.IndicatedCircle
            android:id="@+id/interest_indicator"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="@dimen/spacing_small"/>

        <TextView
            android:id="@+id/interest_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="segfesdf"/>

    </LinearLayout>

</android.support.v7.widget.CardView>